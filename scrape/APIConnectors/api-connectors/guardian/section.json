{
    "version": 1,
    "request": {
        "url": "https://content.guardianapis.com/sections",
        "method": "GET",
        "authorization": {
            "type": "QueryParam",
            "keyParam": "api-key"
        },
        "params": {
            "q": true,
            "page": false,
            "page-size": false
        },
        "search": {
            "key": "q"
        },
        "pagination": {
            "type": "page",
            "pageKey": "page",
            "limitKey": "page-size",
            "maxCount": 50
        }
    },
    "examples": {
        "q": "'basketball'"
    },
    "response": {
        "ctype": "application/json",
        "tablePath": "$.response.results[*]",
        "schema": {
            "headline": {
                "target": "$.webTitle",
                "type": "string"
            },
            "url": {
                "target": "$.webUrl",
                "type": "string"
            }
        },
        "orient": "records"
    }
}

