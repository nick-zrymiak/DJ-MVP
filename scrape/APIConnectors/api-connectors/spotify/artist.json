{
    "version": 1,
    "request": {
        "url": "https://api.spotify.com/v1/search?type=artist",
        "method": "GET",
        "authorization": {
            "type": "OAuth2",
            "grantType": "ClientCredentials",
            "tokenServerUrl": "https://accounts.spotify.com/api/token"
        },
        "params": {
            "q": true,
            "limit": false,
            "offset": false
        },
        "search": {
            "key": "q"
        },
        "pagination": {
            "type": "offset",
            "offsetKey": "offset",
            "limitKey": "limit",
            "maxCount": 50
        }
    },
    "examples": {
        "q": "'drake'"
    },
    "response": {
        "ctype": "application/json",
        "tablePath": "$.artists.items[*]",
        "schema": {
            "name": {
                "target": "$.name",
                "type": "string"
            },
            "genres": {
                "target": "$.genres",
                "type": "object"
            },
            "popularity": {
                "target": "$.popularity",
                "type": "float"
            },
            "# followers": {
                "target": "$.followers.total",
                "type": "int"
            },
            "external urls": {
                "target": "$.external_urls",
                "type": "string"
            },
            "image url": {
                "target": "$.images[0].url",
                "type": "string"
            }
        },
        "orient": "records"
    }
}